#!/usr/bin/env python
import os, sys, fcntl, argparse, subprocess, signal, time

FONT   = '10x20'
COLOR  = '#FBB829'
UCOLOR = '#F02311'
ALIGN  = 'right'
OFFSET = 30
INDENT = 30

parser = argparse.ArgumentParser(
    description = 'Replacement for notify-send'
)

parser.add_argument(
    'summary',
    metavar='<summary>',
    help='Message summary.',
    default='',
)

parser.add_argument(
    'body',
    metavar='<body>',
    default='',
    nargs='*',
    help='Message body.  Arguments will go on separate lines.',
)

parser.add_argument(
    '-p', '--percentage',
    type=int,
    default=None,
    help='Progress percentage.',
)

parser.add_argument(
    '-t', '--time',
    type=int,
    default=3,
    help='Seconds to show notification.',
)

parser.add_argument(
    '-u', '--urgent',
    action='store_true',
    default=False,
    help='Show as urgent.',
)

parser.add_argument(
    '--rjust',
    action='store_true',
    default=False,
    help='Right adjust lines.',
)

args = parser.parse_args()

def notify(COLOR):
    text = args.summary.split('\n') if args.summary else []
    cmd = ['osd_cat',
           '--align=%s' % ALIGN,
           '--outline=1',
           '--font=%s' % FONT,
           '--color=%s' % COLOR,
           '--delay=%d' % args.time,
           '--offset=%d' % OFFSET,
           '--indent=%d' % INDENT,
           ]

    if args.percentage:
        cmd += ['--text=%s' % args.summary,
                '--barmode=percentage',
                '--percentage=%d' % args.percentage,
                ]
    elif args.body:
        for line in args.body:
            text += line.split('\n')

    cmd += ['--lines', str(len(text))]

    # Left align text
    if text and not args.rjust:
        ljust = max([0] + map(len, text))
        text = [line.ljust(ljust) for line in text]

    proc = subprocess.Popen(cmd, stdin = subprocess.PIPE)

    newpid = proc.pid

    pidfile = open('/tmp/xosd.pid', 'a+')
    fcntl.flock(pidfile.fileno(), fcntl.LOCK_EX)
    oldpid = int(pidfile.read() or 0)
    pidfile.seek(0)
    pidfile.truncate()
    pidfile.write(str(newpid))
    pidfile.flush()
    pidfile.close()

    proc.stdin.write('\n'.join(text))
    proc.stdin.close()

    # Long enough that xosd has a change to redraw and short enough that a human
    # won't notice
    time.sleep(0.06)
    if oldpid:
        try:
            os.kill(oldpid, signal.SIGKILL)
        except OSError:
            # nothing to kill
            pass

if args.urgent:
    u = False
    for _ in range(10):
        notify(UCOLOR if u else COLOR)
        u = not u
        time.sleep(0.3)
notify(COLOR)
